{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": ["es6", "es2022"],
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "paths": {
            "@/*": ["src/*"]
        },
        "plugins": [],
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true,
        "swc": true,
    }
}
